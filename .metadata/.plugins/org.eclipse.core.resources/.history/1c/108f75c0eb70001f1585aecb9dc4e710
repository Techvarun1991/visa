apiVersion: apps/v1
kind: Deployment
metadata:
  name: onehealth-patientmanagement
  namespace: patient
spec:
  replicas: 1
  selector:
    matchLabels:
      app: onehealth-patientmanagement
  template:
    metadata:
      labels:
        app: onehealth-patientmanagement
    spec:
      containers:
      - name: onehealth-patientmanagement
        image: nikhilzambare24/patientmanagement:v3
        ports:
        - containerPort: 443
        env:
        - name: SPRING_PROFILES_ACTIVE
          value: "server2"
        volumeMounts:
            - name: my-ssl-secret
              mountPath: /etc/ssl/certs
      volumes:
        - name: my-ssl-secret
          secret:
            secretName: tls-secret
      hostAliases:
      - hostnames:
        - aarogyamandi.local
        ip: 192.168.0.44
        
---
apiVersion: v1
kind: Service
metadata:
  name: onehealth-patientmanagement
  namespace: patient
spec:
  selector:
    app: onehealth-patientmanagement
  ports:
  - name: http
    port: 8080
    protocol: TCP
    targetPort: 8080
  - name: https
    port: 443
    protocol: TCP
    targetPort: 8080
  type: ClusterIP
  
